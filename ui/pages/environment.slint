import { Theme } from "../styles.slint";
import { ScrollView, LineEdit, Button } from "std-widgets.slint";
import { SettingsSection, SettingRow } from "../widgets/section.slint";

// Environment Variables settings page for niri
// Manages environment variables set for all spawned processes
export component EnvironmentPage inherits Rectangle {
    accessible-role: none;
    accessible-label: "Environment variables settings";

    // Variable list (display strings like "QT_QPA_PLATFORM=wayland")
    in-out property <[string]> variable-list: [];
    in-out property <int> selected-variable-index: -1;

    // Current variable being edited
    in-out property <string> current-name: "";
    in-out property <string> current-value: "";

    // Callbacks
    callback add-variable();
    callback remove-variable(int);
    callback select-variable(int);
    callback name-changed(string);
    callback value-changed(string);
    callback reorder-variable(int, int);  // from-index, to-index

    background: transparent;

    // Keyboard focus index
    property <int> focused-variable-index: -1;

    // Drag-and-drop state
    property <bool> is-dragging: false;
    property <int> drag-from-index: -1;
    property <int> drag-target-index: -1;
    property <length> drag-current-y: 0;
    property <length> item-height: 40px;

    HorizontalLayout {
        spacing: Theme.spacing-md;

        // Variables list panel
        Rectangle {
            width: Theme.panel-width-narrow;
            background: Theme.card-background;
            border-radius: Theme.radius-md;

            VerticalLayout {
                padding: Theme.spacing-sm;
                spacing: Theme.spacing-sm;

                // Header
                HorizontalLayout {
                    spacing: Theme.spacing-sm;

                    Text {
                        text: "Environment Variables";
                        color: Theme.text-primary;
                        font-size: Theme.font-size-md;
                        font-weight: 600;
                        vertical-alignment: center;
                        horizontal-stretch: 1;
                    }

                    Button {
                        text: "+";
                        accessible-label: "Add new environment variable";
                        clicked => { root.add-variable(); }
                    }
                }

                // Description
                Text {
                    text: "Variables set for all spawned processes";
                    color: Theme.text-muted;
                    font-size: Theme.font-size-sm;
                    wrap: word-wrap;
                }

                // Variables list with keyboard navigation
                variables-focus := FocusScope {
                    vertical-stretch: 1;

                    accessible-role: list;
                    accessible-label: "Environment variables list";

                    key-pressed(event) => {
                        if (event.text == Key.DownArrow) {
                            if (root.focused-variable-index < root.variable-list.length - 1) {
                                root.focused-variable-index = root.focused-variable-index + 1;
                            }
                            accept
                        } else if (event.text == Key.UpArrow) {
                            if (root.focused-variable-index > 0) {
                                root.focused-variable-index = root.focused-variable-index - 1;
                            } else if (root.focused-variable-index == -1 && root.variable-list.length > 0) {
                                root.focused-variable-index = 0;
                            }
                            accept
                        } else if (event.text == Key.Return || event.text == " ") {
                            if (root.focused-variable-index >= 0) {
                                root.selected-variable-index = root.focused-variable-index;
                                root.select-variable(root.focused-variable-index);
                            }
                            accept
                        } else if (event.text == Key.Delete) {
                            if (root.focused-variable-index >= 0 && root.focused-variable-index == root.selected-variable-index) {
                                root.remove-variable(root.focused-variable-index);
                            }
                            accept
                        }
                        reject
                    }

                    focus-changed-event => {
                        if (self.has-focus && root.focused-variable-index == -1 && root.variable-list.length > 0) {
                            root.focused-variable-index = root.selected-variable-index >= 0 ? root.selected-variable-index : 0;
                        }
                    }

                    ScrollView {
                        list-container := VerticalLayout {
                            spacing: Theme.spacing-xs;

                            for variable[index] in root.variable-list : VerticalLayout {
                                spacing: 0;

                                // Drop indicator - shows above this item when dragging
                                Rectangle {
                                    height: root.is-dragging && root.drag-target-index == index ? 3px : 0;
                                    background: Theme.accent;
                                    border-radius: 1.5px;
                                }

                                Rectangle {
                                    height: root.item-height;
                                    background: root.is-dragging && root.drag-from-index == index
                                        ? Theme.card-background.with-alpha(0.3)
                                        : index == root.selected-variable-index
                                            ? Theme.accent.with-alpha(0.2)
                                            : transparent;
                                    border-radius: Theme.radius-sm;
                                    border-width: index == root.focused-variable-index && variables-focus.has-focus ? 2px : 0px;
                                    border-color: Theme.accent;
                                    opacity: root.is-dragging && root.drag-from-index == index ? 0.5 : 1.0;

                                    accessible-role: list-item;
                                    accessible-label: variable;

                                    touch := TouchArea {
                                        property <length> press-start-y: 0;
                                        property <bool> drag-started: false;

                                        pointer-event(event) => {
                                            if (event.kind == PointerEventKind.down && event.button == PointerEventButton.left) {
                                                self.press-start-y = self.mouse-y;
                                                self.drag-started = false;
                                            } else if (event.kind == PointerEventKind.up || event.kind == PointerEventKind.cancel) {
                                                if (root.is-dragging) {
                                                    // Complete the drag
                                                    if (root.drag-target-index >= 0 && root.drag-target-index != root.drag-from-index) {
                                                        root.reorder-variable(root.drag-from-index, root.drag-target-index);
                                                    }
                                                    root.is-dragging = false;
                                                    root.drag-from-index = -1;
                                                    root.drag-target-index = -1;
                                                } else if (!self.drag-started) {
                                                    // Normal click - select item
                                                    root.focused-variable-index = index;
                                                    root.selected-variable-index = index;
                                                    root.select-variable(index);
                                                    variables-focus.focus();
                                                }
                                                self.drag-started = false;
                                            }
                                        }

                                        moved => {
                                            if (self.pressed) {
                                                // Check drag threshold (5px)
                                                if (!self.drag-started && abs(self.mouse-y - self.press-start-y) > 5px) {
                                                    self.drag-started = true;
                                                    root.is-dragging = true;
                                                    root.drag-from-index = index;
                                                }

                                                if (root.is-dragging) {
                                                    // Update drag position for ghost
                                                    root.drag-current-y = self.mouse-y + index * (root.item-height + Theme.spacing-xs);

                                                    // Calculate target index based on Y position
                                                    // Each item slot is item-height + spacing-xs
                                                    root.drag-target-index = clamp(
                                                        round(root.drag-current-y / (root.item-height + Theme.spacing-xs)),
                                                        0,
                                                        root.variable-list.length
                                                    );
                                                }
                                            }
                                        }
                                    }

                                    HorizontalLayout {
                                        padding-left: Theme.spacing-sm;
                                        padding-right: Theme.spacing-sm;

                                        Text {
                                            text: variable;
                                            color: index == root.selected-variable-index ? Theme.accent : Theme.text-primary;
                                            font-size: Theme.font-size-sm;
                                            vertical-alignment: center;
                                            horizontal-stretch: 1;
                                            overflow: elide;
                                        }

                                        Button {
                                            visible: index == root.selected-variable-index && !root.is-dragging;
                                            text: "x";
                                            accessible-label: "Remove variable";
                                            clicked => { root.remove-variable(index); }
                                        }
                                    }
                                }
                            }

                            // Drop indicator at end of list
                            Rectangle {
                                height: root.is-dragging && root.drag-target-index == root.variable-list.length ? 3px : 0;
                                background: Theme.accent;
                                border-radius: 1.5px;
                            }

                            if root.variable-list.length == 0: Text {
                                text: "No environment variables.\nClick + to add one.";
                                color: Theme.text-muted;
                                font-size: Theme.font-size-sm;
                                horizontal-alignment: center;
                            }
                        }

                        // Ghost item while dragging
                        if root.is-dragging && root.drag-from-index >= 0 && root.drag-from-index < root.variable-list.length: Rectangle {
                            x: Theme.spacing-sm;
                            y: root.drag-current-y - root.item-height / 2;
                            width: list-container.width - Theme.spacing-md;
                            height: root.item-height;
                            background: Theme.card-background;
                            border-radius: Theme.radius-sm;
                            border-width: 2px;
                            border-color: Theme.accent;
                            opacity: 0.9;

                            HorizontalLayout {
                                padding-left: Theme.spacing-sm;
                                padding-right: Theme.spacing-sm;

                                Text {
                                    text: root.variable-list[root.drag-from-index];
                                    color: Theme.accent;
                                    font-size: Theme.font-size-sm;
                                    vertical-alignment: center;
                                    overflow: elide;
                                }
                            }
                        }
                    }
                }
            }
        }

        // Variable editor panel
        if root.selected-variable-index >= 0: Rectangle {
            horizontal-stretch: 1;

            ScrollView {
                VerticalLayout {
                    alignment: start;
            spacing: Theme.spacing-lg;
                    padding-right: Theme.spacing-md;

                    SettingsSection {
                        title: "VARIABLE";

                        VerticalLayout {
                            spacing: Theme.spacing-sm;

                            SettingRow {
                                label: "Name";
                                description: "Variable name (e.g., QT_QPA_PLATFORM)";

                                LineEdit {
                                    width: 250px;
                                    text: root.current-name;
                                    placeholder-text: "VARIABLE_NAME";
                                    edited(value) => {
                                        root.current-name = value;
                                        root.name-changed(value);
                                    }
                                }
                            }

                            SettingRow {
                                label: "Value";
                                description: "Variable value";

                                LineEdit {
                                    width: 250px;
                                    text: root.current-value;
                                    placeholder-text: "value";
                                    edited(value) => {
                                        root.current-value = value;
                                        root.value-changed(value);
                                    }
                                }
                            }
                        }
                    }

                    // Common examples
                    SettingsSection {
                        title: "COMMON EXAMPLES";

                        VerticalLayout {
                            spacing: Theme.spacing-xs;

                            Text {
                                text: "QT_QPA_PLATFORM = wayland";
                                color: Theme.text-muted;
                                font-size: Theme.font-size-sm;
                            }
                            Text {
                                text: "ELECTRON_OZONE_PLATFORM_HINT = wayland";
                                color: Theme.text-muted;
                                font-size: Theme.font-size-sm;
                            }
                            Text {
                                text: "MOZ_ENABLE_WAYLAND = 1";
                                color: Theme.text-muted;
                                font-size: Theme.font-size-sm;
                            }
                            Text {
                                text: "GTK_THEME = Adwaita:dark";
                                color: Theme.text-muted;
                                font-size: Theme.font-size-sm;
                            }
                        }
                    }

                    // Spacer at bottom
                    Rectangle { height: Theme.spacing-lg; }
                }
            }
        }

        // No selection message
        if root.selected-variable-index < 0: Rectangle {
            horizontal-stretch: 1;
            background: Theme.card-background;
            border-radius: Theme.radius-md;

            VerticalLayout {
                alignment: center;

                Text {
                    text: "Select a variable to edit";
                    color: Theme.text-muted;
                    font-size: Theme.font-size-md;
                    horizontal-alignment: center;
                }

                Text {
                    text: "Or click + to add a new environment variable";
                    color: Theme.text-muted;
                    font-size: Theme.font-size-sm;
                    horizontal-alignment: center;
                }
            }
        }
    }
}

                note: "Use strftime codes: %Y (year), %m (month), %d (day), %H (hour), %M (minute), %S (second)";
                settings: root.screenshots-settings;
                has-full-width-text: true;
                full-width-text-setting: root.screenshot-path-setting;
                toggle-changed(id, val) => { root.setting-toggle-changed(id, val); }
                slider-int-changed(id, val) => { root.setting-slider-int-changed(id, val); }
                slider-float-changed(id, val) => { root.setting-slider-float-changed(id, val); }
                combo-changed(id, val) => { root.setting-combo-changed(id, val); }
                text-changed(id, val) => { root.setting-text-changed(id, val); }
            }

            // Clipboard Section
            DynamicSection {
                title: "CLIPBOARD";
                note: "Primary clipboard is the selection-based clipboard used by middle-click paste. Regular Ctrl+C/V clipboard is not affected.";
                settings: root.clipboard-settings;
                toggle-changed(id, val) => { root.setting-toggle-changed(id, val); }
                slider-int-changed(id, val) => { root.setting-slider-int-changed(id, val); }
                slider-float-changed(id, val) => { root.setting-slider-float-changed(id, val); }
                combo-changed(id, val) => { root.setting-combo-changed(id, val); }
                text-changed(id, val) => { root.setting-text-changed(id, val); }
            }

            // Hotkey Overlay Section
            DynamicSection {
                title: "HOTKEY OVERLAY";
                note: "The hotkey overlay shows available keyboard shortcuts. You can still access it with the configured keybinding.";
                settings: root.hotkey-overlay-settings;
                toggle-changed(id, val) => { root.setting-toggle-changed(id, val); }
                slider-int-changed(id, val) => { root.setting-slider-int-changed(id, val); }
                slider-float-changed(id, val) => { root.setting-slider-float-changed(id, val); }
                combo-changed(id, val) => { root.setting-combo-changed(id, val); }
                text-changed(id, val) => { root.setting-text-changed(id, val); }
            }

            // Config Notifications Section
            DynamicSection {
                title: "CONFIG NOTIFICATIONS";
                note: "When enabled, niri won't show a notification if a configuration reload fails due to errors.";
                settings: root.config-notification-settings;
                toggle-changed(id, val) => { root.setting-toggle-changed(id, val); }
                slider-int-changed(id, val) => { root.setting-slider-int-changed(id, val); }
                slider-float-changed(id, val) => { root.setting-slider-float-changed(id, val); }
                combo-changed(id, val) => { root.setting-combo-changed(id, val); }

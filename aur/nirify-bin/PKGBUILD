# Maintainer: Your Name <your.email@example.com>
pkgname=nirify-bin
pkgver=0.2.0
pkgrel=1
pkgdesc="A native settings application for the niri Wayland compositor (pre-built binary)"
arch=('x86_64')
url="https://github.com/FrozenTear/nirify"
license=('GPL-3.0-only')
depends=('gcc-libs' 'glibc')
provides=('nirify')
conflicts=('nirify' 'nirify-git')
source=("${pkgname}-${pkgver}.tar.gz::${url}/releases/download/v${pkgver}/nirify-${pkgver}-x86_64-linux.tar.gz")
# Update this checksum when releasing
sha256sums=('SKIP')

package() {
    install -Dm755 "nirify" "$pkgdir/usr/bin/nirify"
    install -Dm644 "nirify.desktop" "$pkgdir/usr/share/applications/nirify.desktop"
    install -Dm644 "nirify.svg" "$pkgdir/usr/share/icons/hicolor/scalable/apps/nirify.svg"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
